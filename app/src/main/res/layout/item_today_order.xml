<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:id="@+id/rlTodayOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgTodayOrder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:src="@drawable/moov_offerbanner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_toRightOf="@+id/imgTodayOrder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masala Roll"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtProductDeatails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mediun spicy masala roll with green chatni.."
                android:textColor="#9E9E9E" />

            <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/rupee_small"
            android:drawablePadding="@dimen/_3sdp"
            android:gravity="center"
            android:text="120"
            android:textColor="#9E9E9E"
            />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

